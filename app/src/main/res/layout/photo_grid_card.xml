<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="160dp"
    android:layout_centerInParent="true"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:layout_margin="2dp"
    android:background="@color/colorPrimary"
    app:cardBackgroundColor="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="1.5dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp">

        <ImageView
            android:id="@+id/PhotoViewPhotoViewCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:background="#ffffff"
            android:scaleType="fitXY"
            android:layout_below="@id/photo_grid_card_linear_layout"/>

        <ProgressBar
            android:id="@+id/cardloadingpbar"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:indeterminate="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#3E3D63"
            android:id="@+id/photo_grid_card_linear_layout">

            <TextView
                android:id="@+id/UploadedByUserName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="Created by user"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:maxLength="25"
                android:layout_weight="1"/>


            <ImageButton
                android:id="@+id/OptionsButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="false"
                android:src="@drawable/ic_more_vert_black_18dp"
                android:background="@drawable/white_stroke"/>

        </LinearLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>